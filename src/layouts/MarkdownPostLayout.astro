---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}> 
    <main>
		<div id="divPrincipale">
			<Header />
			<div id="divSezione">
				<h1>{frontmatter.title}</h1>
                <p style="color:gray">{frontmatter.pubDate.slice(0, 10)}</p>
				<p>
                    <slot />
                </p>
			</div>	
			<Footer />
		</div>
    </main>
</Layout>

<style>
    @font-face {
        font-family: FontTitoli;
        src: url(../../public/font/DK_Lemon_Yellow_Sun.otf);
    }
        
        #divPrincipale{
            background-color:#ecebe9;
            position: relative;
            min-height: calc(100svh);
            flex-direction: column;
            align-items: center;
            display: block;
            font-size: 17px;
        }
    
        #divSezione{
            font-size: 1em;
            text-align: left;
            padding-top: 1.25em;
            display: block;
            position: relative;
            overflow: hidden;
            padding-left: 30%;
            padding-right:30%;
        }
    
        #h2Console{
            font-size: 0.9em;
            margin-top: 1.7em;
            margin-bottom: 0;
            font-weight: 700;
            padding: 2%;
            line-height: 1.1;
            background-color:#373636;
            font-family: 'Courier New', Courier, monospace;
        }
    
        h1,h2{
            font-size: 1.8em;
            margin-top: 1.7em;
            margin-bottom: 0;
            font-weight: 700;
            line-height: 1.3;
            font-family: FontTitoli;
        }
    
        p{
            font-size: 1em;
            margin-top: .75em;
            margin-bottom: 0;
            line-height: 150%;
        }
    
        a{
            text-decoration: underline;
        }
    
    </style>
